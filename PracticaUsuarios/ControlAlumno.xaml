<UserControl x:Class="PracticaUsuarios.ControlAlumno"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PracticaUsuarios"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <WrapPanel Orientation="Vertical" Background="White" Margin="0,0,-173,0">
        <TextBlock Name="lblNombreA" FontWeight="Bold">Nombre</TextBlock>
        <TextBox Name="txtNombreA" Width="200"></TextBox>
        <TextBlock Name="lblDireccionA" FontWeight="Bold">Direccion</TextBlock>
        <TextBox Width="200" Name="txtDireccionA"></TextBox>
        <TextBlock Name="lblCarreraA" FontWeight="Bold">Carrera</TextBlock>
        <ComboBox Name="cbCarreraA">
            <ComboBoxItem>Ing. Multimedia</ComboBoxItem>
            <ComboBoxItem>Fisioterapia</ComboBoxItem>
            <ComboBoxItem>ing. Industrial</ComboBoxItem>
        </ComboBox>
        <TextBlock Name="lblPreparatoriaP" FontWeight="Bold">Preparatoria de procedencia:</TextBlock>
        <TextBox Width="200" Name="txtPreparatoriaP"></TextBox>
    </WrapPanel>
</UserControl>
