<UserControl x:Class="PracticaUsuarios.Alumno"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PracticaUsuarios"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <WrapPanel Orientation="Vertical" Background="White" Margin="0,0,-173,0">
        <TextBlock>Nombre</TextBlock>
        <TextBox Width="200"></TextBox>
        <TextBlock>Direccion</TextBlock>
        <TextBox Width="200"></TextBox>
        <TextBlock>Carrera</TextBlock>
        <ComboBox>
            <ComboBoxItem>Ing. Multimedia</ComboBoxItem>
            <ComboBoxItem>Fisioterapia</ComboBoxItem>
            <ComboBoxItem>ing. Industrial</ComboBoxItem>
        </ComboBox>
        <TextBlock>Preparatoria de procedencia:</TextBlock>
        <TextBox Width="200"></TextBox>
        <Button Width="100" Margin="150,0,0,0">Guardar</Button>
    </WrapPanel>
</UserControl>
